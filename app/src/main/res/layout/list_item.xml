<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_height="84dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/content_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/item_table"
            android:textAlignment="viewStart"
            android:text="Frankfurt"
            android:layout_gravity="center_vertical|center_horizontal|start"
            android:layout_marginStart="@dimen/item_table_margin_start"
            android:layout_marginLeft="@dimen/item_table_margin_start"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            app:srcCompat="@drawable/sas"
            android:id="@+id/content_freighter"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_margin="2dp" />

        <TextView
            android:id="@+id/content_exp_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/item_table"
            android:textAlignment="viewEnd"
            android:layout_gravity="center_vertical|center_horizontal|end"
            android:text="23:13"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/content_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/item_table"
            android:textAlignment="viewStart"
            android:text="Wylądował"
            android:layout_gravity="center_vertical|center_horizontal|start"
            android:layout_marginStart="@dimen/item_table_margin_start"
            android:layout_marginLeft="@dimen/item_table_margin_start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/content_flight"
            android:layout_weight="1"
            style="@style/item_table"
            android:layout_margin="2dp"
            android:text="LH 1378"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/content_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/item_table"
            android:textAlignment="viewEnd"
            android:layout_gravity="center_vertical|center_horizontal|end"
            android:text="23:10"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp" />
    </LinearLayout>


</LinearLayout>