<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.poblocki.drawer.ItemPagerFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:text="@string/header_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_destination"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center" />
        <TextView
            android:text="@string/header_flight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_flight"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:text="@string/header_freighter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_freighter"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:text="@string/header_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_time"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:text="@string/header_exp_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_exp_time"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:text="@string/header_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_remarks"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/list_item"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp" />
</FrameLayout>
